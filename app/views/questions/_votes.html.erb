<div class="btn-group">
  <% if user_signed_in? && current_user.voted_up_on?(question) %>
    <%= link_to dislike_question_path(question), method: :put, redirect_to: request.path, class: "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-chevron-up"></span> <%= question.get_upvotes.size %>
    <% end %>
  <% else %>
    <%= link_to like_question_path(question), method: :put, class: "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-chevron-up"></span> <%= question.get_upvotes.size %>
    <% end %>
  <% end %>
</div>
