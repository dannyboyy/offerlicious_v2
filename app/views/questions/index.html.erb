<div class="row">
  <div class="col-md-8">
    <h2>Questions</h2>
  </div>
  <div class="col-md-4">
    <%= search_form_for @q do |f| %>
      <%= f.search_field :title_cont, placeholder: "Search...", class: "form-control" %>
    <% end %>
  </div>
</div>

<% @questions.each do |question| %>
  <div class="question row clearfix">
    <h2>
      <%= link_to question.title, question %><br>
      <small class="author">Submitted <%= time_ago_in_words(question.created_at) %> by <%= question.user.username %></small>
    </h2>

    <div class="btn-group">
      <%= link_to like_question_path(question), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Upvote
        <%= question.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_question_path(question), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-down"></span>
        Downvote
        <%= question.get_downvotes.size %>
      <% end %>
    </div>
  </div>
<% end %>
